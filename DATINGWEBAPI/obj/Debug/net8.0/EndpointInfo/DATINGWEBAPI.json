{
  "openapi": "3.0.1",
  "info": {
    "title": "DATINGWEBAPI SYSTEM Core",
    "description": "API for DATINGWEBAPI SYSTEM Core Application",
    "version": "v1"
  },
  "paths": {
    "/api/Auth/request-otp": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Request for OTP",
        "description": "User enters mobile number and receives an OTP via SMS",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestOTPDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/RequestOTPDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/RequestOTPDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP Sent Successfully"
          },
          "400": {
            "description": "Invalid Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/Auth/verify-otp": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Login via Mobile With OTP",
        "description": "User enter mobile no with OTP",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDTO"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDTO"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequestDTO"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OTP Sent Successfully"
          },
          "400": {
            "description": "Invalid Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/api/User/user-detail": {
      "get": {
        "tags": [
          "User"
        ],
        "summary": "Get User Detail  ",
        "description": "Get Current User Detail",
        "responses": {
          "200": {
            "description": "OTP Sent Successfully"
          },
          "400": {
            "description": "Invalid Request"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "LoginRequestDTO": {
        "type": "object",
        "properties": {
          "mobileNumber": {
            "type": "string",
            "nullable": true
          },
          "otp": {
            "type": "string",
            "nullable": true
          },
          "firstName": {
            "type": "string",
            "nullable": true
          },
          "lastName": {
            "type": "string",
            "nullable": true
          },
          "birthDate": {
            "type": "string",
            "format": "date-time",
            "nullable": true
          },
          "gender": {
            "type": "string",
            "nullable": true
          },
          "interestIds": {
            "type": "array",
            "items": {
              "type": "integer",
              "format": "int32"
            },
            "nullable": true
          },
          "allowContactAccess": {
            "type": "boolean",
            "nullable": true
          },
          "enableNotifications": {
            "type": "boolean",
            "nullable": true
          },
          "bio": {
            "type": "string",
            "nullable": true
          },
          "location": {
            "type": "string",
            "nullable": true
          },
          "latitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          },
          "longitude": {
            "type": "number",
            "format": "double",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "RequestOTPDTO": {
        "type": "object",
        "properties": {
          "mobileNumber": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Paste your JWT Bearer token on textbox below!",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  },
  "security": [
    {
      "Bearer": [ ]
    }
  ]
}